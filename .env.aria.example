# ARIA Integration Environment Variables
# Copy this to your .env file and fill in the values

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Atomik Data Hub URL
# For local development: http://localhost:8000
# For production: https://your-data-hub.railway.app
ATOMIK_DATA_HUB_URL=http://localhost:8000

# Redis URL for caching
# For local: redis://localhost:6379
# For production: redis://user:password@host:port
REDIS_URL=redis://localhost:6379

# ARIA Configuration
ARIA_CACHE_TTL=60  # Cache timeout in seconds
ARIA_MAX_TOKENS=500  # Default max tokens for responses

# Query-specific token limits
ARIA_SIMPLE_MAX_TOKENS=150
ARIA_MODERATE_MAX_TOKENS=300
ARIA_COMPLEX_MAX_TOKENS=800